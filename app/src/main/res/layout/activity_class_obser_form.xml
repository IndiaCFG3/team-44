<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Observation Form"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="30dp"
        />
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name of the student"
        android:inputType="text"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/head1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leadership"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        />
    <TextView
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Presence"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rate 1-5"
        android:inputType="text"
        />
    <TextView
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initiative"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <EditText

        android:id="@+id/t2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rate 1-5"
        android:inputType="text"
        />
    <TextView
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confidence"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/t3"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rate 1-5"
        android:inputType="text"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mentorship"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        />
    <TextView
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preparation"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rate 1-5"
        android:inputType="text"
        />
    <TextView
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helping teams"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/t5"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rate 1-5"
        android:inputType="text"
        />






    <Button
        android:id="@+id/submit"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        />

</LinearLayout>